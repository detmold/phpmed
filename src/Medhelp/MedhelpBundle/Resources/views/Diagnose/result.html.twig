{% extends '::base.html.twig' %}

{% block body %}

<h1>Results:</h1>
{% for disease in diseases %}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ disease.name }}</h3>
    </div>
    <div class="panel-body">
        <span class="text-primary">Description:</span> <span class="text-muted">{{ disease.description }}</span>
        <br />
        <span class="text-info">Tags:</span> <span class="text-muted">{{ disease.tags }}</span>
    </div>
</div>
{% else %}
No disease have been found.
{% endfor %}

{% endblock body %}
