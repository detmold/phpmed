{% extends '::base.html.twig' %}

{% block body -%}
<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1>Patient</h1>

      <div class="table-responsive">
    		<table class="table table-striped">
    			<tbody>
    				<tr>
    					<th>Id</th>
    					<td>{{ entity.id }}</td>
    				</tr>
    				<tr>
    					<th>Firstname</th>
    					<td>{{ entity.firstName }}</td>
    				</tr>
    				<tr>
    					<th>Lastname</th>
    					<td>{{ entity.lastName }}</td>
    				</tr>
					<tr>
					  <th>Mobile</th>
					  <td>{{ entity.mobile }}</td>
					</tr>
					<tr>
					  <th>Pesel</th>
					  <td>{{ entity.pesel }}</td>
					</tr>
					<tr>
					  <th>Adress</th>
					  <td>{{ entity.adress }}</td>
					</tr>
					
					<tr>
					  <th>Nfz</th>
					  <td>{{ entity.nfz }}</td>
					</tr>
					<tr>
					  <th>Sex</th>
					  <td>{{ entity.sex }}</td>
					</tr>
					<tr>
					  <th>Birthday</th>
					  <td>{{ entity.birthday|date("m/d/Y") }}</td>
					</tr>
					<tr>
					  <th>Register date</th>
					  <td>{{ entity.registerdate|date("m/d/Y") }}</td>
					</tr>
					<tr>
					  <th>Person to inform</th>
					  <td>{{ entity.person }}</td>
					</tr>
					<tr>
					  <th>Nip</th>
					  <td>{{ entity.nip }}</td>
					</tr>
					
					{% if entity.diagnoses is not empty %}
					<tr>
						<td colspan="2">
							{% for diagnose in entity.diagnoses %}
								<div class="row {{ cycle(['even','odd'],loop.index) }}">
									<div class="col-md-12">
										<div class="row">
											<div class="col-md-6">
												<h4>Diagnose date: {{diagnose.date|date("m/d/Y")}}</h4>
											</div>
										</div>
										<div class="row">
											<div class="col-md-6">
												<div class="list-group">
												<h5>Diseases:</h5>
												{% for disease in diagnose.disease %}
													<a class="list-group-item" href="{{ path('diagnosis_show', { 'id': diagnose.id }) }}">
														<h6 class="list-group-item-heading">{{disease.name}}</h6>
													</a>
												{% endfor %}
												</div>
											</div>
												
											<div class="col-md-6">
												<div class="list-group">
												<h5>Symptoms:</h5>
												{% for symptom in diagnose.symptom %}
													<a class="list-group-item" href="{{ path('diagnosis_show', { 'id': diagnose.id }) }}">
														<h6 class="list-group-item-heading">{{symptom.name}}</h6>
													</a>
												{% endfor %}
												</div>
											</div>
										</div>
									</div>
								</div>
							{% endfor %}
						</td>		
					</tr>		
					{% endif %}
      		</tbody>
      	</table>
    </div>
      {{ form(delete_form) }}
      <div class="btn-group">
        <a class="btn btn-default" href="{{ path('patient_edit', { 'id': entity.id }) }}">Edit</a>
        <a class="btn btn-default" href="{{ path('patient') }}">Back to the list</a>
      </div>
    </div>
  </div>
</div>
{% endblock %}
