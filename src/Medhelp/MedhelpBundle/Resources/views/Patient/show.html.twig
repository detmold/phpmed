{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Patient</h1>

    <div class="table-responsive">
		<table class="table table-striped">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ entity.id }}</td>
				</tr>
				<tr>
					<th>Firstname</th>
					<td>{{ entity.firstName }}</td>
				</tr>
				<tr>
					<th>Lastname</th>
					<td>{{ entity.lastName }}</td>
				</tr>
			</tbody>
		</table>
	</div>

        <ul class="record_actions">
    <li>
        <a href="{{ path('patient') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('patient_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
