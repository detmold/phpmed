{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Diagnosis list</h1>

    <div class="table-responsive">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Id</th>
					<th>Date</th>
					<th>Prescription</th>
					<th>Patient</th>
					<th>Patient diseases</th>
					<th>Patient symptoms</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
			{% for entity in entities %}
				<tr>
					<td><a href="{{ path('diagnosis_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
					<td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
					<td>{{ entity.prescription }}</td>
					<td>{{ entity.patient }}</td>
					<td>
						{% if entity.disease is not null %}
							<ul>
							{% for disease in entity.disease %}
								<li>
									{{disease.name}}
								</li>
							{% endfor %}
							</ul>
						{% endif %}
					</td>
					<td>
						{% if entity.disease is not null %}
							<ul>
							{% for disease in entity.disease %}
								<li>
									{{disease.tags}}
								</li>
							{% endfor %}
							</ul>
						{% endif %}
					</td>
					<td>
					<ul>
						<li>
							<a href="{{ path('diagnosis_show', { 'id': entity.id }) }}">show</a>
						</li>
						<li>
							<a href="{{ path('diagnosis_edit', { 'id': entity.id }) }}">edit</a>
						</li>
					</ul>
					</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>

        <ul>
        <li>
            <a href="{{ path('medhelp_medhelp_diagnosis_search') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
